# Nexus HR Test Environment Configuration

# Node Environment
NODE_ENV=test

# Frontend Configuration
VITE_API_URL=http://localhost:3001/api
VITE_USE_MSW=true

# Backend API Configuration
PORT=3001
CORS_ORIGIN=http://localhost:8080

# Database Configuration (Use separate test database)
DATABASE_URL=postgresql://nexus_user:test_password@localhost:5432/nexus_hr_test?schema=public

# JWT Configuration (Use insecure test values)
JWT_SECRET=test_jwt_secret_for_testing_only
JWT_EXPIRES_IN=1h

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads/test

# Disable external services in tests
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=

# Logging
LOG_LEVEL=error

# Rate Limiting (More permissive for tests)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Test-specific flags
ENABLE_TEST_ROUTES=true
SKIP_AUTH_IN_TESTS=false
