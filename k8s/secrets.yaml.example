# Kubernetes Secrets Template
# IMPORTANT: Copy this file to secrets.yaml and fill in with real values
# DO NOT commit secrets.yaml to version control!
#
# To create secrets from file:
# kubectl create secret generic nexus-hr-secrets --from-env-file=secrets.env -n nexus-hr
#
# Or apply this file after filling values and encoding:
# echo -n 'your-secret-value' | base64

apiVersion: v1
kind: Secret
metadata:
  name: nexus-hr-secrets
  namespace: nexus-hr
  labels:
    app: nexus-hr
type: Opaque
data:
  # Database Credentials (base64 encoded)
  # Example: echo -n 'postgres' | base64
  POSTGRES_USER: cG9zdGdyZXM=  # Change this! (currently: postgres)
  POSTGRES_PASSWORD: Y2hhbmdlbWU=  # Change this! (currently: changeme)

  # Database URL (base64 encoded)
  # Format: postgresql://username:password@postgres:5432/nexus_hr
  # Example: echo -n 'postgresql://postgres:password@postgres:5432/nexus_hr' | base64
  DATABASE_URL: cG9zdGdyZXNxbDovL3Bvc3RncmVzOnBhc3N3b3JkQHBvc3RncmVzOjU0MzIvbmV4dXNfaHI=  # Change this!

  # JWT Secret (base64 encoded) - MUST be at least 32 characters
  # Example: echo -n 'your-super-secret-jwt-key-min-32-chars' | base64
  JWT_SECRET: eW91ci1zdXBlci1zZWNyZXQtand0LWtleS1taW4tMzItY2hhcnM=  # Change this!

  # SMTP Credentials (base64 encoded)
  # Example: echo -n 'your-email@gmail.com' | base64
  SMTP_USER: eW91ci1lbWFpbEBnbWFpbC5jb20=  # Change this!
  SMTP_PASSWORD: eW91ci1lbWFpbC1wYXNzd29yZA==  # Change this!

  # AWS Credentials (if using S3 for file storage)
  # Example: echo -n 'YOUR_AWS_ACCESS_KEY_ID' | base64
  AWS_ACCESS_KEY_ID: WU9VUl9BV1NfQUNDRVNTX0tFWV9JRA==  # Change this! (currently: YOUR_AWS_ACCESS_KEY_ID)
  AWS_SECRET_ACCESS_KEY: WU9VUl9BV1NfU0VDUkVUX0FDQ0VTU19LRVk=  # Change this! (currently: YOUR_AWS_SECRET_ACCESS_KEY)

---
