# Nexus HR Production Environment Configuration
#
# IMPORTANT: This is an example file. Copy to .env.production and update with actual values.
# DO NOT commit .env.production to version control!

# Node Environment
NODE_ENV=production

# Frontend Configuration
VITE_API_URL=https://api.nexushr.com/api
VITE_USE_MSW=false

# Backend API Configuration
PORT=3001
CORS_ORIGIN=https://nexushr.com

# Database Configuration
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=postgresql://nexus_user:STRONG_PASSWORD_HERE@db.nexushr.com:5432/nexus_hr_production?schema=public

# JWT Configuration
# IMPORTANT: Use a strong random secret (min 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=REPLACE_WITH_STRONG_RANDOM_SECRET_MIN_32_CHARS
JWT_EXPIRES_IN=7d

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/var/www/nexus-hr/uploads

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@nexushr.com
SMTP_PASS=STRONG_SMTP_PASSWORD

# Monitoring & Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=info
LOG_FILE=/var/log/nexus-hr/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5

# Session Configuration
SESSION_SECRET=REPLACE_WITH_STRONG_SESSION_SECRET

# Redis Configuration (for session store, optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS S3 Configuration (for file storage, optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=nexus-hr-files

# Feature Flags
ENABLE_MFA=true
ENABLE_SSO=false
ENABLE_ANALYTICS=true

# Security
HELMET_CSP_ENABLED=true
HTTPS_ONLY=true
SECURE_COOKIES=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=/var/backups/nexus-hr

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please check back soon."
